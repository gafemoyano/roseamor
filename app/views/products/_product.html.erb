<div class="card">
  <div class="ui slide masked reveal image">
    <%= image_tag(product.image.url(:original), class: 'visible content') %>
    <%= image_tag(product.package.url(:original), class: 'hidden content') %>
  </div>
  <div class="content">
    <div class="header"><%= product.name  %> </div>
    <div class="meta">
      <%=	 link_to 'Available in all colors', colors_path %>
    </div>
    <div class="description">
      <%= product.description %>
    </div>
  </div>
  <div class="extra content">
      <span class="right floated">
       <strong> <%= product.dimensions %> </strong>
      </span>
      <span>
        <strong>Dimensions</strong>
      </span>
  </div>
</div>