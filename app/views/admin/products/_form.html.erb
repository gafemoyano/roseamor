<%= simple_form_for  [:admin, model] do |f| %>
    <%= f.input :name %>
    <%= f.input :diameter %>
    <%= f.input :height %>
    <%= f.input :description %>
    <%= f.association :category %>
    <%= f.input :image, as: :file %>
    <%= f.input :package, as: :file %>

    <div class="form-group" style="max-width: 250px;">
      <label class="control-label file required" for="product_image">
       Current Image
      </label>
      <%= link_to(image_tag(model.image.url(:thumb), class: 'img-responsive'), model.image.url, target: '_blank') %>
    </div>

    <div class="form-group" style="width: 250px;" >
      <label class="control-label file required" for="product_image">
       Current Package
      </label>
      <%= link_to(image_tag(model.package.url(:thumb), class: 'img-responsive'), model.package.url, target: '_blank')  %>
    </div>

    <%= f.button :submit, class: 'btn btn-dark' %>

<% end %>
