<h3 style="color: black">Products</h3>
<div class="admin-separator"></div>
<%= link_to 'New', new_admin_product_path, class: 'btn btn-dark' %>
<section class="admin-section">
 <% @categories.each do |category| %>
    <h4><%= category.name %></h4>
      <table class="table">
        <thead>
        <tr>
          <th>Name</th>
          <th>Dimensions</th>
          <th>Picture</th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% category.products.by_name.each do |product| %>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.dimensions %></td>
              <td><%= link_to image_tag(product.image.url(:thumb), class: 'img-responsive'), product.image.url, target: '_blank' %></td>
              <td>
                <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-default' %>
                <%= link_to 'Destroy', admin_product_path(product), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table>
 <% end %>
</section>
