<section id="contact">
  <div class="container">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
    <% end %>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center" >
        <h2>Contact Us</h2>
        <hr class="sep">
        <p>Get In Touch</p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3 wow fadeInUp text-center" data-wow-delay=".3s">
        <%= simple_form_for @contact, url: contact_path(@contact, anchor: 'contact') do |f| %>
            <%= f.input :name, required: true, label: false, placeholder: 'Name' %>
            <%= f.input :email, require: true, label: false, placeholder: 'Email' %>
            <%= f.input :country, require: true,  label: false, include_blank: false %>
            <%= f.input :city,  label: false, placeholder: 'City' %>
            <%= f.input :message, as: :text, required: true, label: false, placeholder: 'Message' %>

            <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
            </div>
        <% end %>

      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-4 col-lg-offset-2 text-center">
        <i class="fa fa-phone fa-3x"></i>
        <p>+593 2 2363 496</p>
        <p>+593 2 2363 497</p>
      </div>
      <div class="col-lg-4 text-center">
        <i class="fa fa-envelope-o fa-3x"></i>
        <p><a href="mailto:sales@roseamor.com">sales@roseamor.com</a></p>
        <p><a href="mailto:natalia@roseamor.com">natalia@roseamor.com</a></p>
        <p><a href="mailto:diego@roseamor.com">diego@roseamor.com</a></p>
      </div>
    </div>
  </div>
</section>
