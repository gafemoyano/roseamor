<% cache ['home_services', @home] do %>
  <section id="services">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">Services</h2>
          <hr class="primary">
          <p>Highest quality preserved roses</p>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">

        <%= link_to products_path do %>
          <div class="col-md-3 text-center">
            <div class="service-box">
              <i class="vs vs-rose fa-4x text-primary sr-icons"></i>
              <h3>Products</h3>
              <p class="text-muted">We offer the highest quality preserved roses on the market.</p>
            </div>
          </div>
        <% end %>
        <%= link_to colors_path do %>
          <div class="col-md-3 text-center">
            <div class="service-box">
              <i class="fa fa-paint-brush fa-4x text-primary sr-icons"></i>
              <h3>Colors</h3>
              <p class="text-muted">We have the most complete color palette.</p>
            </div>
          </div>
        <% end %>
        <%= link_to root_path(anchor: 'distributors'), data: { turbolinks: false } do %>
          <div class="col-md-3 text-center">
            <div class="service-box">
              <i class="fa fa-4x fa-truck text-primary sr-icons"></i>
              <h3>Distributors</h3>
              <p class="text-muted">Contact our distributors to order our products all over the world.</p>
            </div>
          </div>
        <% end %>

        <%= link_to root_path(anchor: 'portfolio'), data: { turbolinks: false } do %>
          <div class="col-md-3 text-center">
            <div class="service-box">
              <i class="fa fa-4x fa-lightbulb-o text-primary sr-icons"></i>
              <h3>Innovation</h3>
              <p class="text-muted">We encourage innovation and support our distributors on implementing fresh
                ideas.</p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
<% end %>